<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:paddingBottom="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingBottom="8dp">

            <ImageButton
                android:id="@+id/backButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:src="@drawable/ic_arrow_back"
                android:contentDescription="Back"
                app:tint="#4CAF50"
                android:padding="8dp" />
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your Daily Macro Goals"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#4CAF50"
            android:fontFamily="@font/montserrat_extrabold"
            android:layout_marginBottom="24dp" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:layout_marginHorizontal="4dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="10dp"
            app:cardUseCompatPadding="true"
            android:backgroundTint="#E8F5E9">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">
                <TextView
                    android:id="@+id/goalTypeText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Goal: Gain Muscle"
                    android:textSize="18sp"
                    android:textColor="#388E3C"
                    android:textStyle="bold"
                    android:fontFamily="@font/montserrat_medium"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/activityLevelText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Activity Level: Moderately Active"
                    android:textSize="18sp"
                    android:textColor="#388E3C"
                    android:textStyle="bold"
                    android:fontFamily="@font/montserrat_medium"
                    android:layout_marginBottom="16dp" />

                <TextView
                    android:id="@+id/caloriesText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Calories: 2000 kcal"
                    android:textSize="18sp"
                    android:textColor="#1B5E20"
                    android:textStyle="bold"
                    android:fontFamily="@font/montserrat_medium" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:layout_marginHorizontal="4dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="10dp"
            app:cardUseCompatPadding="true"
            android:backgroundTint="#E3F2FD">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:id="@+id/proteinText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Protein: 150g"
                    android:textSize="18sp"
                    android:textColor="#0D47A1"
                    android:textStyle="bold"
                    android:fontFamily="@font/montserrat_medium" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:layout_marginHorizontal="4dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="10dp"
            app:cardUseCompatPadding="true"
            android:backgroundTint="#FFF3E0">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:id="@+id/carbsText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Carbohydrates: 250g"
                    android:textSize="18sp"
                    android:textColor="#EF6C00"
                    android:textStyle="bold"
                    android:fontFamily="@font/montserrat_medium" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:layout_marginHorizontal="4dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="10dp"
            app:cardUseCompatPadding="true"
            android:backgroundTint="#FCE4EC">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:id="@+id/fatsText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fats: 70g"
                    android:textSize="18sp"
                    android:textColor="#C2185B"
                    android:textStyle="bold"
                    android:fontFamily="@font/montserrat_medium" />
            </LinearLayout>
            <Button
                android:id="@+id/backToDashboardBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:text="Back to Dashboard"
                android:textColor="@android:color/white"
                android:backgroundTint="#4CAF50"
                android:fontFamily="@font/montserrat_medium"
                android:textAllCaps="false"/>

        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>