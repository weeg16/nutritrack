<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Update Goal"
            android:textSize="24sp"
            android:textColor="#388E3C"
            android:fontFamily="@font/montserrat_extrabold"
            android:layout_marginBottom="24dp" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            android:backgroundTint="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <Spinner
                    android:id="@+id/goalSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:backgroundTint="#BDBDBD"
                    android:fontFamily="@font/montserrat_medium"
                    />

                <Spinner
                    android:id="@+id/activityLevelSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp"
                    android:backgroundTint="#BDBDBD"
                    android:fontFamily="@font/montserrat_medium"
                    />

                <EditText
                    android:id="@+id/updateWeightEt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Current Weight (kg)"
                    android:inputType="numberDecimal"
                    android:backgroundTint="#BDBDBD"
                    android:fontFamily="@font/montserrat_medium"
                    android:layout_marginBottom="16dp" />

                <EditText
                    android:id="@+id/updateCaloriesEt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Daily Calorie Goal"
                    android:inputType="number"
                    android:backgroundTint="#BDBDBD"
                    android:fontFamily="@font/montserrat_medium"
                    android:layout_marginBottom="16dp" />

                <EditText
                    android:id="@+id/updateProteinEt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Protein Goal (g)"
                    android:inputType="number"
                    android:backgroundTint="#BDBDBD"
                    android:fontFamily="@font/montserrat_medium"
                    android:layout_marginBottom="16dp" />

                <EditText
                    android:id="@+id/updateCarbsEt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Carbs Goal (g)"
                    android:inputType="number"
                    android:backgroundTint="#BDBDBD"
                    android:fontFamily="@font/montserrat_medium"
                    android:layout_marginBottom="16dp" />

                <EditText
                    android:id="@+id/updateFatsEt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Fats Goal (g)"
                    android:inputType="number"
                    android:backgroundTint="#BDBDBD"
                    android:fontFamily="@font/montserrat_medium"
                    android:layout_marginBottom="24dp" />

                <Button
                    android:id="@+id/saveUpdatedGoalBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Save Updated Goal"
                    android:backgroundTint="#4CAF50"
                    android:textColor="@android:color/white"
                    android:textAllCaps="false"
                    android:textSize="16sp"
                    android:fontFamily="@font/montserrat_medium" />

                <Button
                    android:id="@+id/viewGoalBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="View Goal"
                    android:backgroundTint="#9E9E9E"
                    android:textColor="@android:color/white"
                    android:textAllCaps="false"
                    android:textSize="16sp"
                    android:fontFamily="@font/montserrat_medium"
                    android:layout_marginTop="12dp" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>
