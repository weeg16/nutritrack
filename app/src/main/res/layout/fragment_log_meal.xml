<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA"
    android:padding="24dp"
    android:clipToPadding="false"
    android:clipChildren="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Log Your Meal"
            android:textColor="#4CAF50"
            android:textSize="24sp"
            android:textStyle="bold"
            android:fontFamily="@font/montserrat_extrabold"
            android:layout_marginBottom="24dp" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            app:cardPreventCornerOverlap="false"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <EditText
                    android:id="@+id/mealNameEt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Meal Name"
                    android:inputType="text"
                    android:layout_marginBottom="16dp"
                    android:fontFamily="@font/montserrat_medium" />

                <EditText
                    android:id="@+id/caloriesEt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Calories (kcal)"
                    android:inputType="numberDecimal"
                    android:layout_marginBottom="16dp"
                    android:fontFamily="@font/montserrat_medium" />

                <EditText
                    android:id="@+id/proteinEt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Protein (g)"
                    android:inputType="numberDecimal"
                    android:layout_marginBottom="16dp"
                    android:fontFamily="@font/montserrat_medium" />

                <EditText
                    android:id="@+id/carbsEt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Carbohydrates (g)"
                    android:inputType="numberDecimal"
                    android:layout_marginBottom="16dp"
                    android:fontFamily="@font/montserrat_medium" />

                <EditText
                    android:id="@+id/fatsEt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Fats (g)"
                    android:inputType="numberDecimal"
                    android:layout_marginBottom="24dp"
                    android:fontFamily="@font/montserrat_medium" />

                <Button
                    android:id="@+id/saveLogBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Save Meal Log"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:fontFamily="@font/montserrat_medium"
                    android:backgroundTint="#4CAF50"
                    android:textAllCaps="false"
                    android:padding="12dp" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>
